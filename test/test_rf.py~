#!usr/bin/env python
# -*- coding: utf-8 -*-

from filters import range_filter as rf
import numpy as np
import unittest


class RFTestSuite(unittest.TestCase):
    """Basic test cases."""
    def __init__(self):
        self.N = 10;
        self.dist_range = [0.03,50]
        self.RF = rf.RangeFilter(self.N, self.dist_range)
       
     
    def test_min(self):
        """ Test for the minimum range"""
        data = np.zeros(self.N)
        min_data = np.ones(self.N)*np.amin(self.dist_range)
        self.assertEqual(tuple(self.RF.update(data)), tuple(min_data))

    def test_max(self):
        """ Test for the maximum range"""
        data = np.ones(self.N)*100
        max_data = np.ones(self.N)*np.amax(self.dist_range)
        self.assertEqual(tuple(self.RF.update(data)), tuple(max_data))

if __name__ == '__main__':
    unittest.main()
